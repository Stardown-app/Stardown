{
    "manifest_version": 3,
    "name": "Stardown",
    "description": "Copy to the clipboard a markdown link to the current page.",
    "version": "0.0.1",
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "96": "images/icon-96.png",
            "128": "images/icon-128.png"
        }
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+U",
                "mac": "Command+Shift+U"
            },
            "description": "Copy to the clipboard a markdown link to the current page"
        }
    }
}
