{
    "manifest_version": 2,
    "name": "Stardown",
    "description": "Copy to the clipboard a markdown link for the current page.",
    "version": "0.0.1",
    "homepage_url": "https://github.com/wheelercj/Stardown",
    "browser_specific_settings": {
        "gecko": {
            "id": "stardown@chriswheeler.dev"
        }
    },
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "contextMenus"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js",
                "create-text-fragment-arg.js",
                "fragment-generation-utils.js"
            ]
        }
    ],
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "96": "images/icon-96.png",
            "128": "images/icon-128.png"
        }
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+U",
                "mac": "Command+Shift+U"
            },
            "description": "Copy to the clipboard a markdown link for the current page"
        }
    }
}
