{
    "manifest_version": 3,
    "name": "Stardown",
    "description": "Copy the web as markdown.",
    "version": "1.0.0",
    "homepage_url": "https://github.com/Stardown-app/Stardown",
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "contextMenus",
        "storage",
        "sidePanel",
        "notifications"
    ],
    "optional_permissions": [
        "tabs",
        "downloads"
    ],
    "options_page": "settings.html",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js",
                "fragment-generation-utils.js",
                "text-fragment-utils.js"
            ]
        }
    ],
    "icons": {
        "16": "images/stardown-16.png",
        "32": "images/stardown-32.png",
        "48": "images/stardown-48.png",
        "96": "images/stardown-96.png",
        "128": "images/stardown-128.png"
    },
    "action": {
        "default_icon": {
            "16": "images/stardown-16.png",
            "32": "images/stardown-32.png",
            "48": "images/stardown-48.png",
            "96": "images/stardown-96.png",
            "128": "images/stardown-128.png"
        },
        "default_title": "Stardown",
        "default_popup": "popup.html"
    },
    "side_panel": {
        "default_title": "Stardown",
        "default_path": "sidebar.html",
        "default_icon": "images/stardown-16.png"
    },
    "commands": {
        "copySelection": {
            "suggested_key": {
                "default": "Alt+C"
            },
            "description": "Copy selection"
        },
        "copyEntirePage": {
            "suggested_key": {
                "default": "Alt+P"
            },
            "description": "Copy entire page"
        },
        "copyMultipleTabs": {
            "description": "Copy multiple tabs"
        },
        "openSidePanel": {
            "suggested_key": {
                "default": "Alt+N"
            },
            "description": "Open Stardown's notepad"
        },
        "openSettings": {
            "suggested_key": {
                "default": "Alt+O"
            },
            "description": "Open settings"
        },
        "reportBug": {
            "description": "Report a bug"
        },
        "requestFeature": {
            "description": "Request a feature"
        },
        "discuss": {
            "description": "Join the discussion"
        },
        "openSource": {
            "description": "See the source code"
        }
    }
}
